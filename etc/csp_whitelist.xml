<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="default-src">
            <values>
                <value id="instant_default" type="host">*.instant.one</value>
            </values>
        </policy>
        <policy id="script-src">
            <values>
                <value id="instant_script" type="host">*.instant.one</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="instant_style" type="host">*.instant.one</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="instant_font" type="host">*.instant.one</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="instant_frame" type="host">*.instant.one</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="instant_connect" type="host">*.instant.one</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="data" type="host">data:</value>
                <value id="instant_img" type="host">*.instant.one</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>