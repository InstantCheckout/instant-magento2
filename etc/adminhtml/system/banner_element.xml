<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
  <group id="banner_element" translate="label" type="text" sortOrder="5" showInDefault="1"
    showInWebsite="1"
    showInStore="1">
    <label>Banner Element settings</label>
    <comment>
      &lt;p&gt;For additional technical support contact &lt;a href="mailto:hello@instant.one"
      target="_blank" rel="noopener noreferrer"&gt;hello@instant.one&lt;/a&gt;.&lt;/p&gt;</comment>
    <field
      id="bannerElementEnabled" translate="label" type="text" sortOrder="20" showInDefault="1"
      showInWebsite="1" showInStore="1">
      <label>Enable Banner element</label>
      <comment><![CDATA[Specifies whether the banner element should be enabled.]]></comment>
      <config_path>payment/instant/bannerElement_enabled</config_path>
    </field>
    <field
      id="targetElementSelector" translate="label" type="text" sortOrder="20" showInDefault="1"
      showInWebsite="1" showInStore="1">
      <label>Target HTML element selector</label>
      <comment><![CDATA[HTML element selector of where the Instant Banner Element should be inserted. e.g. #shipping-section-title. Use the config below to prepend or append to this specified element.]]></comment>
      <config_path>payment/instant/bannerElement_targetElementSelector</config_path>
    </field>
    <field
      id="shouldAppendToElement" translate="label" type="select" sortOrder="30" showInDefault="1"
      showInWebsite="1" showInStore="1">
      <label>Show append or prepend to target</label>
      <comment><![CDATA[Should appear before or after the target element specified above. Defaults to Prepend.]]></comment>
      <source_model>Instant\Checkout\Model\Adminhtml\Source\AppendPrepend</source_model>
      <config_path>payment/instant/bannerElement_shouldAppendToElement</config_path>
    </field>
    <field
      id="theme" translate="label" type="select" sortOrder="30" showInDefault="1"
      showInWebsite="1" showInStore="1">
      <label>Light/dark mode</label>
      <comment><![CDATA[Defaults to light mode]]></comment>
      <source_model>Instant\Checkout\Model\Adminhtml\Source\LightDarkMode</source_model>
      <config_path>payment/instant/bannerElement_theme</config_path>
    </field>
  </group>
</include>