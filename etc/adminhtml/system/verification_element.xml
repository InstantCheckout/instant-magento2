<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
  <group id="verification_element" translate="label" type="text" sortOrder="4" showInDefault="1"
    showInWebsite="1"
    showInStore="1">
    <label>Verification Element settings</label>
    <comment>
      &lt;p&gt;For additional technical support contact &lt;a href="mailto:hello@instant.one"
      target="_blank" rel="noopener noreferrer"&gt;hello@instant.one&lt;/a&gt;.&lt;/p&gt;</comment>

    <field id="emailFieldSelector"
      translate="label" type="text" sortOrder="20" showInDefault="1"
      showInWebsite="1" showInStore="1">
      <label>Email HTML field selector</label>
      <comment><![CDATA[HTML element selector of email field that the Instant Verification Element should be listening to. e.g. "#email-input"]]></comment>
      <config_path>payment/instant/verificationElement_emailFieldSelector</config_path>
    </field>
  </group>
</include>