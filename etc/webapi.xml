<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/instant/:storeCode/cart/merge" method="POST">
        <service class="Instant\Checkout\Api\CartsManagementInterface" method="merge" />
