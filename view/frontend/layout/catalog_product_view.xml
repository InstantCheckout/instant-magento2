<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.addtocart">
            <block class="Instant\Checkout\Block\PdpBlock" name="ic-pdp-btn" before="-"
                template="Instant_Checkout::ic-pdp-btn.phtml" />
        </referenceBlock>
        <referenceBlock name="product.info.addtocart.additional">
            <block class="Instant\Checkout\Block\PdpBlock" name="ic-pdp-additional-btn" before="-"
                template="Instant_Checkout::ic-pdp-btn.phtml" />
        </referenceBlock>
        <referenceBlock name="product.info.addtocart.bundle">
            <block class="Instant\Checkout\Block\PdpBlock" name="ic-pdp-btn-bundle" before="-"
                template="Instant_Checkout::ic-pdp-btn.phtml" />
        </referenceBlock>
    </body>
</page>